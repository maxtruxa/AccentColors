<Window x:Class="AccentColors.ColorPicker"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:AccentColors"
        Title="ColorPicker" Height="106" Width="194" ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        FocusManager.FocusedElement="{Binding ElementName=TextBoxColor}">
    <Grid>
        <TextBox x:Name="TextBoxColor" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="155" TextChanged="TextBoxColor_TextChanged"/>
        <Button x:Name="ButtonUse" Content="Use" HorizontalAlignment="Left" Margin="90,38,0,0" VerticalAlignment="Top" Width="75" Click="ButtonUse_Click" IsDefault="True"/>
        <Button x:Name="ButtonDiscard" Content="Discard" HorizontalAlignment="Left" Margin="10,38,0,0" VerticalAlignment="Top" Width="75" Click="ButtonDiscard_Click" IsCancel="True"/>
    </Grid>
</Window>
